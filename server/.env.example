# ===========================================
# LICENSE SERVER - ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ---------------------------------------------
# ADMIN CREDENTIALS (One-time seed only)
# ---------------------------------------------
# These are used ONLY if admin_users table is empty on startup
# After first run, admin is stored in SQLite with bcrypt hash
# Leave empty to seed manually via seed_admin_quick.py
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Nainovate@ai

# ---------------------------------------------
# CORS CONFIGURATION
# ---------------------------------------------
# Comma-separated list of allowed frontend origins
# Development:
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Production example:
# CORS_ORIGINS=https://your-frontend-domain.com,https://www.your-frontend-domain.com

# ---------------------------------------------
# SESSION COOKIE CONFIGURATION
# ---------------------------------------------
# Cookie security settings
# For localhost (HTTP): set to false
# For production (HTTPS): set to true
SESSION_COOKIE_SECURE=false

# Cookie domain (optional)
# Leave empty for localhost
# For production, set to your domain (e.g., .yourdomain.com for subdomain support)
SESSION_COOKIE_DOMAIN=

# ---------------------------------------------
# DOCKER CONFIGURATION (Optional)
# ---------------------------------------------
# Docker Hub Personal Access Token for private image access
DOCKER_PAT=
